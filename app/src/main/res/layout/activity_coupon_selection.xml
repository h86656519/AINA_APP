<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CouponSelectionActivity">

    <include
        android:id="@+id/couponselection_toolbar"
        layout="@layout/toolbar" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/couponDetail"
                    android:textColor="@color/contents_text"
                    android:textSize="17dp"
                    android:typeface="sans" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <RadioGroup
                android:layout_marginLeft="17dp"
                android:id="@+id/coupon_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<RadioButton-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="17dp"-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:button="@drawable/radiobutton_background"-->
                    <!--android:paddingLeft="8dp"-->
                    <!--android:text="@string/coupon_1"-->
                    <!--android:textColor="@color/contents_text" />-->

                <!--<RadioButton-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="17dp"-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:layout_marginBottom="8dp"-->
                    <!--android:button="@drawable/radiobutton_background"-->
                    <!--android:paddingLeft="8dp"-->
                    <!--android:text="@string/coupon_2"-->
                    <!--android:textColor="@color/contents_text" />-->
            </RadioGroup>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="bottom">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_rounde1"
            android:text="@string/finish"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>