<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_window_focused="true">
        <layer-list>
            <!--只給下邊框-->
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp" >
                <shape android:shape="rectangle" >
                    <padding android:bottom="2dp" android:left="0dp" android:right="3dp" android:top="2dp" />
                    <stroke android:width="1dip" android:color="@color/sbc_snippet_text" />
                </shape>
            </item>
            <item android:gravity="right">
                <bitmap android:gravity="right" android:src="@drawable/icon_arrow_down_pink" />
            </item>
        </layer-list>
    </item>
</selector>