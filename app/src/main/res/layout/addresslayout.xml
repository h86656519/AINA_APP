<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >

    <TextView
        android:layout_marginTop="4dp"
        android:layout_marginLeft="17dp"
        android:id="@+id/name_texview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="陳小美" />

    <TextView
        android:layout_marginLeft="18dp"
        android:id="@+id/phone_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_texview"
        android:text="0930140811" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_marginLeft="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_textview"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="bottom"
            android:layout_weight="0.1"
            android:id="@+id/address_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="台北市汐止區民族路三街八號四樓" />

        <ImageView
            android:layout_weight="1.3"
            android:id="@+id/trash_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/icon_trash"
            android:scaleType="centerCrop" />
    </LinearLayout>
    <View
        android:layout_below="@id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@android:color/darker_gray" />
</RelativeLayout>
